<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_id"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:theme="@style/AppTheme"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:weightSum="1.75">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtHoTen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="CÁI TRÍ MINH"
                    android:textSize="13dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:id="@+id/txtPhongBan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:gravity="left|center_vertical"
                android:text="PHÒNG KỸ THUẬT"
                android:textStyle="bold"
                android:textSize="13dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="0.3"
                    android:gravity="left|center_vertical"
                    android:text="Ngày sinh"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/txtNgaySinh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="right|center_vertical"
                    android:text="TRẦN VĂN DŨNG"
                    android:layout_marginRight="8dp"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="0.3"
                    android:gravity="left|center_vertical"
                    android:text="Ngày vào công ty"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/txtNgayVaoLam"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="right|center_vertical"
                    android:text="NGUYỄN THANH YẾN"
                    android:layout_marginRight="8dp"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="0.3"
                    android:gravity="left|center_vertical"
                    android:text="Nơi sinh"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/txtNoiSinh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="right|center_vertical"
                    android:text="Đồng Nai"
                    android:layout_marginRight="8dp"
                    android:textSize="13dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:gravity="left|center_vertical"
                android:text="Địa chỉ:"
                android:textSize="13dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtDiaChi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="false"
                android:singleLine="true"
                android:gravity="left|center_vertical"
                android:text="153/3 KP. Trần Hưng Đạo, TT. Dầu Giay, Thống Nhất, Đồng Nai"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>